{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Lint",
      "type": "python",
      "request": "launch",
      "module": "pylint",
      "cwd": "${workspaceFolder}",
      "args": [
        "--rcfile=${workspaceFolder}/.pylintrc",
        "--verbose",
        "src_micropython",
        "*.py"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Black",
      "type": "python",
      "request": "launch",
      "module": "black",
      "cwd": "${workspaceFolder}",
      "args": [
        "--config",
        "${workspaceFolder}/.blackconfig.yaml",
        "*.py",
        "src_micropython/*.py"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: heater_wrapper_test.py",
      "type": "python",
      "request": "launch",
      "justMyCode": true,
      "program": "${workspaceFolder}/heater_wrapper_test.py",
      "cwd": "${workspaceFolder}",
      "args": [],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: heater_thread_test.py",
      "type": "python",
      "request": "launch",
      "justMyCode": true,
      "program": "${workspaceFolder}/heater_thread_test.py",
      "cwd": "${workspaceFolder}",
      "args": [],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: heater_hsm.py",
      "type": "python",
      "request": "launch",
      "justMyCode": true,
      "program": "${workspaceFolder}/heater_hsm.py",
      "cwd": "${workspaceFolder}",
      "args": [],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: hsm_test.py",
      "type": "python",
      "request": "launch",
      "justMyCode": true,
      "program": "${workspaceFolder}/hsm_test.py",
      "cwd": "${workspaceFolder}",
      "args": [],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: hsm.py (doctest)",
      "type": "python",
      "request": "launch",
      "justMyCode": true,
      "program": "${workspaceFolder}/hsm.py",
      "cwd": "${workspaceFolder}",
      "args": [],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Remote Attach",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "${workspaceFolder}"
        }
      ],
      "justMyCode": false
    }
  ]
}